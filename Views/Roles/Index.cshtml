@model IQueryable<IdentityRole>
@{
    ViewData["Title"] = "List Roles";
}

<h1>Roles</h1>

<p>
    <a asp-action="create">Create New Role</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Id
            </th>
            <th>Manage Role</th>
            <th>Manage Users</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
                <td>
                    <a asp-action="ListUsers" asp-route-id="@item.Id">View Users</a> |                    
                    <a asp-action="EditUsers" asp-route-id="@item.Id">Edit Users</a>
                </td>
            </tr>
        }
    </tbody>
</table>

