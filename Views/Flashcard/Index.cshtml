@model IEnumerable<Flashcard>

@{
    ViewData["Title"] = "Index";
}

<h1>Flashcards</h1>

<p>
    <a asp-action="Add">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Word)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnglishTranslation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Language)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Word)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnglishTranslation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Language.EnglishName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FlashcardId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FlashcardId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FlashcardId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
