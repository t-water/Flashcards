@model Language

@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>

<h4>Language</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EnglishName" class="control-label"></label>
                <input asp-for="EnglishName" class="form-control" />
                <span asp-validation-for="EnglishName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NativeName" class="control-label"></label>
                <input asp-for="NativeName" class="form-control" />
                <span asp-validation-for="NativeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Abbreviation" class="control-label"></label>
                <input asp-for="Abbreviation" class="form-control" />
                <span asp-validation-for="Abbreviation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LanguageFamilyId" class="control-label"></label>
                <select asp-for="LanguageFamilyId" class="form-control" asp-items="ViewBag.LanguageFamilyId">
                    <option value="">Select Language Family</option>
                </select>
                <span asp-validation-for="LanguageFamilyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

